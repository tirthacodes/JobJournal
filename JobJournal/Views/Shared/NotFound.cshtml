@model ErrorViewModel

@{
    ViewData["Title"] = ViewData["ErrorTitle"] ?? "Error";
}

<div class="text-center py-5 my-5">
    <h1 class="display-1 text-danger">
        @if (ViewData["ErrorTitle"] != null && ViewData["ErrorTitle"].ToString().Contains("404"))
        {
            <span>404</span>
        }
        else
        {
            <span>Oops!</span>
        }
    </h1>
    <h2 class="display-4 text-muted mb-4">
        @ViewData["ErrorMessage"]
    </h2>



    <p class="lead text-muted mt-4">
        We're sorry, but the page you were looking for could not be found.
        Please check the URL for typos or try navigating back to the home page.
    </p>

    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-lg btn-primary mt-3">
        <i class="bi bi-house-door-fill me-2"></i> Go to Homepage
    </a>
</div>
